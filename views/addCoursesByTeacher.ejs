<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

  

  <!-- FORM -->

   <div class="flex flex-col justify-center font-[sans-serif] sm:h-screen p-4">
    <div class="max-w-md w-full mx-auto border border-gray-300 rounded-2xl p-8">
      <div class="text-center mb-12">
       <h1 class="text-2xl font-bold">Add New Courses</h1>
      </div>
      <% if (errors) { %>
     
        <div class="bg-red-100 text-red-800 p-4 rounded-lg mb-10" role="alert">
          <strong class="font-bold text-sm mr-4">Error!</strong>
          <span class="block text-sm sm:inline max-sm:mt-2"><%= errors %></span>
        </div>
      <% } %>
      <form action="/instructor/course/add" method="post" >
        <div class="space-y-6">
          <div>
            <label class="text-gray-800 text-sm mb-2 block">Name Course </label>
            <input name="name" type="text"  class="text-gray-800 bg-white border border-gray-300 w-full text-sm px-4 py-3 rounded-md outline-blue-500" placeholder="Name Course" />
          </div>
          <div>
            <label class="text-gray-800 text-sm mb-2 block">Description</label>
            <textarea name="description" type="text" class="text-gray-800 bg-white border border-gray-300 w-full text-sm px-4 py-3 rounded-md outline-blue-500" placeholder="Description" ></textarea>
          </div>
          <div>
            <label class="text-gray-800 text-sm mb-2 block">Duration</label>
            <input name="duration" type="text" class="text-gray-800 bg-white border border-gray-300 w-full text-sm px-4 py-3 rounded-md outline-blue-500" placeholder="Duration" />
          </div>
          <div >
           
<!-- LOOPING CATEGORY! -->
            <select id="dropdownMenu" class='text-gray-800 bg-white border border-gray-300 w-full text-sm px-4 py-3 rounded-md outline-blue-500'>
              <option class='text-gray-800 bg-white border border-gray-300 w-full text-sm px-4 py-3 rounded-md outline-blue-500'>
               
                Category
                <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" class="inline-block ml-auto fill-blue-600"
                  viewBox="0 0 24 24">
                  <path
                    d="M9.707 19.121a.997.997 0 0 1-1.414 0l-5.646-5.647a1.5 1.5 0 0 1 0-2.121l.707-.707a1.5 1.5 0 0 1 2.121 0L9 14.171l9.525-9.525a1.5 1.5 0 0 1 2.121 0l.707.707a1.5 1.5 0 0 1 0 2.121z"
                    data-original="#000000" />
                </svg>
            </option>
            <% data2.forEach(el => { %>
             
              <option value="<%= el.id %>">
                <%= el.name %>
              </option>
              <% }) %>
             
              
            </select>
          </div>

        </div>

        <div class="!mt-12">
          <button type="submit" class="w-full py-3 px-4 text-sm tracking-wider font-semibold rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
            Add New Course
          </button>
        </div>
       
      </form>
    </div>
  </div>
</body>
</html>